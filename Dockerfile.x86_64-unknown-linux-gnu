FROM ubuntu:24.04

ARG DEBIAN_FRONTEND=noninteractive

# Install base build dependencies
RUN apt-get update && \
    apt-get install -y \
    curl \
    build-essential \
    gcc \
    g++ \
    pkg-config \
    libssl-dev \
    ca-certificates \
    cmake \
    ninja-build \
    perl \
    && rm -rf /var/lib/apt/lists/*

# Install Rust 1.90 (pinned version for compatibility)
RUN curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh -s -- -y --default-toolchain 1.90.0 --profile minimal
ENV PATH="/root/.cargo/bin:${PATH}"

# Add the target
RUN rustup target add x86_64-unknown-linux-gnu

# Install GTK and WebKit dependencies for Tauri
RUN apt-get update && \
    apt-get install -y \
    libglib2.0-dev \
    libgtk-3-dev \
    libwebkit2gtk-4.1-dev \
    libayatana-appindicator3-dev \
    librsvg2-dev \
    patchelf \
    libopenblas-dev \
    gfortran \
    chromium-browser \
    chromium-chromedriver \
    && rm -rf /var/lib/apt/lists/*

# Set up pkg-config paths
ENV PKG_CONFIG_PATH=/usr/lib/x86_64-linux-gnu/pkgconfig:/usr/share/pkgconfig
ENV PKG_CONFIG_ALLOW_CROSS=1

# Use vendored OpenSSL to avoid OpenSSL 3.0 compatibility issues
ENV OPENSSL_STATIC=1
ENV OPENSSL_VENDORED=1

# Set browser and webdriver paths for plotly_static
ENV BROWSER_PATH=/usr/bin/chromium-browser
ENV WEBDRIVER_PATH=/usr/bin/chromedriver

WORKDIR /project
